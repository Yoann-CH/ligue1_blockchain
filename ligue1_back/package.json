{
  "name": "ligue1-vote-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application de vote Ligue 1 avec blockchain",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "node:start": "hardhat node",
    "node:network": "hardhat node --hostname 0.0.0.0",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network sepolia",
    "clean": "hardhat clean"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "voting",
    "ligue1",
    "express",
    "api"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.24.1",
    "nodemon": "^3.0.2"
  }
}
